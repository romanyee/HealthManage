<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/ll_heartbeatNotify"
        android:layout_width="225dp"
        android:layout_height="121dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_dark">

        <TextView
            android:id="@+id/show_heartbeatNotify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="心率正常"
            android:textSize="25sp"
            android:textColor="@android:color/white"/>






    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bloodNotify"
        android:layout_width="225dp"
        android:layout_height="121dp"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_dark">

        <TextView
            android:id="@+id/show_bloodNotify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="血氧饱和度正常"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sleepNotify"
        android:layout_width="225dp"
        android:layout_height="121dp"
        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_dark">

        <TextView
            android:id="@+id/show_sleepNotify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="其他测量结果正常"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@android:color/white"/>


    </LinearLayout>

</RelativeLayout>